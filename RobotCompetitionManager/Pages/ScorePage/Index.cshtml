@page
@model RobotCompetitionManager.Pages.ScorePage.ScoreIndexModel
@{
}

<h1 style="text-align: center; font-weight:bolder; color: #002d72">SCORE</h1>

<section class="intro">
  <div class="bg-image h-100" style="background-color: #f5f7fa;">
    <div class="mask d-flex align-items-center h-100">
      <div class="container">
        <div class="justify-content-center">
          <div>
            <div class="card">
              <div class="card-body p-0">
                <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true" style="position: relative; height: 520px">
                  <table class="table table-striped mb-0">
                    <thead style="background-color: #002d72; color: #fff">
                      <tr style="text-align:center">
                        <th scope="col"> Team Code</th>
                        <th scope="col"> Checkpoint Code</th>
                        <th scope="col"> Score Value</th>
                        <th scope="col"> Check Time</th>
				      </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Scores) {
                            <tr style="text-align:center">
                                <td>@Html.DisplayFor(modelItem => item.TeamCode)</td>
                                <td>@Html.DisplayFor(modelItem => item.CheckpointCode)</td>
                                <td>@Html.DisplayFor(modelItem => item.ScoreValue)</td>
                                <td>@Html.DisplayFor(modelItem => item.CheckTime)</td>
                            </tr>
                         }             
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>